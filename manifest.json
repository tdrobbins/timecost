{
  "manifest_version": 2,
  "name": "timecost",
  "description": "workinprogress",
  "homepage_url": "https://github.com/tdrobbins/",
  "version": "0.0",
  "icons": {
    "48": "icons/icon.png",
    "96": "icons/icon@2x.png"
  },

  "browser_action": {
    "default_popup": "./popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["./timecost.js"]
  }],
  "permissions": ["storage"],
  "background":{
    "scripts": ["background.js"],
    "persistent": false
  }
}
